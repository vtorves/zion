<div class="col-md-6 col-md-offset-3 panel panel-default">
  <div class="panel-body">
    <h2>Create an Account</h2>

    <%= form_for (Account.new) do |f| %>
      <%= f.fields_for :owner do |o| %>
        <%= form_group_for o, :name do %>
          <%= o.text_field :name, class: 'form-control' %>
        <% end %>
        <%= form_group_for o, :email do %>
          <%= o.text_field :email, class: 'form-control' %>
        <% end %>
        <%= form_group_for o, :password do %>
          <%= o.text_field :password, class: 'form-control' %>
        <% end %>
        <%= form_group_for o, :password_confirmation do %>
          <%= o.text_field :password_confirmation, class: 'form-control' %>
        <% end %>
      <% end %>


      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>