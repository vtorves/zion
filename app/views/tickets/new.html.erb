<div class="col-md-6 col-md-offset-3 panel panel-default">

	<div class="panel-body">
		<h2>Create an Tickets</h2>

		<%= form_for @ticket do |f| %>

		<%= form_group_for f, :number_only do %>
		<%= f.text_field :number_only, class: 'form-control' %>
		<% end %>

	    <%= form_group_for f, :account_id do %>
		<%= collection_select(:ticket, :account_id, Account.all, :owner_id, :lastname,:prompt => true) %> (quem Cria)

		<!-- account config -->

		<%= form_group_for f, :subject do %>
		<%= f.text_field :subject, class: 'form-control' %>
		<% end %>
		<%= form_group_for f, :demand do %>
		<%= f.text_area :demand, class: 'form-control' %>
		<% end %>

		#destino
		<%= form_group_for f, :assigned do %>
		<%= collection_select(:ticket, :assigned, Account.all, :owner_id, :lastname,:prompt => true) %> ou
		<% end %>
		<%= form_group_for f, :group_id do %>
		<%= collection_select(:ticket, :group_id, Group.all, :id, :name,:prompt => true) %>
		<% end %>
		


		<% end %>



		<%= form_group_for f, :private do %>
		<%= f.text_field :private, class: 'form-control' %>
		<% end %>
		<%= form_group_for f, :ip do %>
		<%= f.text_field :ip,  class: 'form-control' %>
		<% end %>

		<%= form_group_for f, :local do %>
		<%= f.select :local, ([["Escritório", "Escritório"], 
		["FORUM", "FORUM"]]), class: 'form-control' %>
		<% end %>

		<%= form_group_for f, :status do %>
		<%= f.select :status, ([["ATIVO", "ATIVO"], 
		["INATIVO", "INATIVO"]]), class: 'form-control' %>
		<% end %> (ATIVO IMPLICITO)

		<%= form_group_for f, :priority do %>
		<%= f.select :priority, ([["Urgente", "urgente"], 
		["Normal", "Normal"], ["Emergencia", "Emergencia"]]) %>
		<% end %>


		<%= f.submit class: 'btn btn-primary' %>
		<% end %>
	</div>
</div>